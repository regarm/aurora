{{#contentFor 'page-req'}}
	<script src="/bower_components/angular-route/angular-route.js"></script>
	<script src="/js/exit_codes.js"></script>
{{/contentFor}}
<div ng-controller="ExitCodeController">
	<nav class="navbar navbar-default navbar-static-top">
        <div class="container">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar1" aria-expanded="false" aria-controls="navbar">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
          </div>

          <div class="collapse navbar-collapse" id="navbar1">
            <ul class="nav navbar-nav navbar-left">
              	<li><a href="#!all" ng-class="{active: isActive('/all')}">All</a></li>
				<li><a href="#!admin" ng-class="{active: isActive('/admin')}">Admin Only</a></li>
				<li><a href="#!user" ng-class="{active: isActive('/user')}">User Only</a></li>
            </ul>
          </div>
        </div>
    </nav>

	<div ng-view></div>
	<script type="text/ng-template" id="all.htm">
		<div class="view-container  table-responsive">
			<table class="table table-bordered table-hover">
				<tr>
					<th>Exit Code</th>
					<th>Mnemonic</th>
					<th>Description</th>
				</tr>
				<tr ng-repeat="verdict in verdicts">
					<td title="Exit Code" id="[[verdict.exitCode]]"  style="background-color: [[verdict.color]]">[[verdict.exitCode]]</td>
					<td title="Mnemonic" style="background-color: [[verdict.color]]">[[verdict.mnemonic]]</td>
					<td title="Description" style="background-color: [[verdict.color]]">[[verdict.desc]]</td>
				</tr>
			</table>
		</div>
	</script>
	<script type="text/ng-template" id="admin.htm">
		<div class="view-container  table-responsive">
			<table class="table table-bordered table-hover">
				<tr>
					<th>Exit Code</th>
					<th>Mnemonic</th>
					<th>Description</th>
				</tr>
				<tr ng-repeat="verdict in verdicts | filter : {'color' : 'blue'}">
					<td title="Exit Code" style="background-color: [[verdict.color]]">[[verdict.exitCode]]</td>
					<td title="Mnemonic" style="background-color: [[verdict.color]]">[[verdict.mnemonic]]</td>
					<td title="Description" style="background-color: [[verdict.color]]">[[verdict.desc]]</td>
				</tr>
			</table>
		</div>
	</script>
	<script type="text/ng-template" id="user.htm">
		<div class="view-container  table-responsive">
			<table class="table table-bordered table-hover">
				<tr>
					<th>Exit Code</th>
					<th>Mnemonic</th>
					<th>Description</th>
				</tr>
				<tr ng-repeat="verdict in verdicts | filter : {'color' : 'green'}">
					<td title="Exit Code" style="background-color: [[verdict.color]]">[[verdict.exitCode]]</td>
					<td title="Mnemonic" style="background-color: [[verdict.color]]">[[verdict.mnemonic]]</td>
					<td title="Description" style="background-color: [[verdict.color]]">[[verdict.desc]]</td>
				</tr>
			</table>
		</div>
	</script>
</div>